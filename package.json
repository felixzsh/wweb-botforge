{
  "name": "wweb-botforge",
  "version": "1.0.0",
  "description": "Create powerful WhatsApp bots with YAML configuration",
  "main": "dist/cli/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli/index.ts",
    "start": "node ./dist/cli/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "postinstall": "node scripts/postinstall.js",
    "uninstall": "node scripts/uninstall.js",
    "prepack": "pnpm run build"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  },
  "keywords": [
    "whatsapp",
    "bot",
    "automation",
    "service",
    "yaml",
    "systemd",
    "chatbot"
  ],
  "author": {
    "name": "Félix Sánchez (@felixzsh)",
    "email": "felix.sanchez.dev@gmail.com",
    "url": "https://github.com/felixzsh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/felixzsh/wweb-botforge.git"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.6.1",
    "@types/qrcode-terminal": "^0.12.2",
    "jest": "^30.2.0",
    "pino-pretty": "^13.1.2",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "commander": "^12.1.0",
    "express": "^5.1.0",
    "inquirer": "^12.4.1",
    "js-yaml": "^4.1.0",
    "pino": "^10.0.0",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.25.0"
  },
  "bin": {
    "botforge": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "scripts",
    "systemd",
    "README.md",
    "LICENSE"
  ],
  "os": [
    "linux"
  ]
}
