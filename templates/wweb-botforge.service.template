[Unit]
Description=WWeb BotForge - WhatsApp Bot Service
After=network.target
Documentation=https://github.com/felixzsh/wweb-botforge

[Service]
Type=simple
WorkingDirectory={{INSTALL_DIR}}
ExecStart=xvfb-run -a {{NODE_PATH}} {{INSTALL_DIR}}/dist/cli/index.js
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=wweb-botforge

# Variables de entorno
Environment="NODE_ENV=production"
Environment="CONFIG_DIR={{CONFIG_DIR}}"

# LÃ­mites de seguridad
LimitNOFILE=65536
PrivateTmp=true

[Install]
WantedBy=multi-user.target